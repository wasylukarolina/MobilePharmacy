<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobilePharmacy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color -->
        <item name="android:windowBackground">#FFFFFF</item>
        <!-- Text color -->
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#AD4027</item>
        <item name="colorPrimaryDark">#AD4027</item>
        <item name="colorAccent">#AD4027</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>


    <!--    kolory -->
    <style name="CustomFilledBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor" tools:override="true">@color/red
        </item> <!-- Ustawienie czerwonego koloru akcentu po klikniÄ™ciu -->
        <item name="background" tools:override="true">@color/white</item>
        <item name="android:textColor" tools:override="true">@color/black</item>
        <item name="hintTextColor" tools:override="true">@color/red</item>
    </style>


    <style name="EditTextStyle">
        <item name="colorControlActivated">#000000</item>
    </style>

    <style name="RoundedNumber">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:height">40dp</item>
    </style>


    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="logotext">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">9</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>

    </style>

    <style name="Theme.MobilePharmacy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CalendarTextStyle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.MobilePharmacy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MobilePharmacy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red</item>
    </style>

</resources>