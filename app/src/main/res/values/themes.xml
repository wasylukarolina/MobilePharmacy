<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.MobilePharmacy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="fontFamily">@font/AlegreyaSans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="logotext">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">9</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>

    </style>



    <style name="Theme.MobilePharmacy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.MobilePharmacy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MobilePharmacy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>