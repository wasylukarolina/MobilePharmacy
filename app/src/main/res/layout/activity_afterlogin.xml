<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Pasek narzędzi -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searchDrugs"
            style="@style/button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="208dp"
            android:text="SZUKAJ LEKU NA DOLEGLIWOŚĆ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addToFirstAidKit"
            style="@style/button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="140dp"
            android:text="DODAJ LEK DO APTECZKI"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dosage"
            style="@style/button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="76dp"
            android:text="DODAJ DAWKOWANIE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myFirsAidKit"
            style="@style/button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="140dp"
            android:text="MOJA APTECZKA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/sessiontoolbar" />

        <!-- Przyciski i ikony -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myDosage"
            style="@style/button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="76dp"
            android:text="MOJE DAWKOWANIE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myHealth"
            style="@style/button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="208dp"
            android:text="MÓJ STAN ZDROWIA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/calendar_border"
            android:dateTextAppearance="@style/CalendarTextStyle"
            android:textColor="@color/black"
            android:textColorPrimary="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/historyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="316dp"
            android:text="Twoja historia:"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header"
        app:menu="@menu/sessionmenu" />

</androidx.drawerlayout.widget.DrawerLayout>
